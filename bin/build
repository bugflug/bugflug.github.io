#!/usr/bin/env bash

cd $(dirname $0)
cd ..

# rollup
npx rollup ./src/index.js \
    --file ./bundle/index.js \
    --format iife \
    --name frag \
    --validate \
    --exports named

# downgrade
npx babel src ./bundle/index.js \
    -o ./bundle/index.js

# compress
npx terser ./bundle/index.js \
    --compress \
    --output ./bundle/index.js